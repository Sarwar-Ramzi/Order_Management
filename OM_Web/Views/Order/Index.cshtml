@model List<OM_Web.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<div class="container mt-4">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary rounded-4 fw-bold" asp-controller="Order" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Company</th>
                <th>Date</th>
                <th>Shipping Fee</th>
                <th>Taxes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Order_No</td>
                    <td>@item.Customer_ID</td>
                    <td>@item.Order_Date</td>
                    <td>@item.Shipping_Fee</td>
                    <td>@item.Taxes</td>
                    <td>@item. </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Order" asp-action="UpdateCustomer" asp-route-id="@item.Order_No" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Order" asp-action="DeleteCustomer" asp-route-id="@item.Order_No" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model List<OM_Web.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-4">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary fw-bold rounded-4" asp-controller="Customer" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Customer
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Company</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Customer_ID</td>
                    <td>@item.Company</td>
                    <td>@item.E_Mail_Address</td>
                    <td>@item.Business_Phone</td>
                    <td>@item.Fax_Number</td>
                    <td>@item.Address</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="Update" asp-route-id="@item.Customer_ID" class="btn btn-primary mx-2 rounded-4">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Customer_ID" class="btn btn-danger mx-2 rounded-4">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


